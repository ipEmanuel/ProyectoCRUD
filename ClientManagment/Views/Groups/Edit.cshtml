@model ClientManagment.Models.Group

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Grupo</h1>

<hr />
<div class="row">
    <div class="col-sm-12 col-lg-6">
        <input id="groupId" hidden asp-for="GroupId">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input id="editGroup" type="submit" value="Editar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-dark">Volver</a>
        </div>
    </div>

    <div id="clientsList" class="col-sm-12 col-lg-6">
        @Html.Partial("_ClientsList.cshtml")
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/group.js" asp-append-version="true"></script>
}

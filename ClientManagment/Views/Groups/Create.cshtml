@model ClientManagment.Models.Group

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Grupo</h1>
<hr />
<div class="row">

    <div class="col-sm-12 col-lg-6">
        @*<form asp-action="Create">*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input id="createGroup" type="submit" value="Crear" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-dark">Volver</a>
        </div>
        @*</form>*@
    </div>
    <div id="clientsList" class="col-sm-12 col-lg-6">
        @Html.Partial("_ClientsList.cshtml")
        @*<partial name="_ClientsList.cshtml />*@
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/group.js" asp-append-version="true"></script>
}

@model ClientManagment.Models.Client

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Cliente</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentNumber" class="control-label"></label>
                <input asp-for="DocumentNumber" class="form-control" maxlength="8" />
                <span asp-validation-for="DocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patent" class="control-label"></label>
                <input asp-for="Patent" class="form-control" maxlength="8" />
                <span asp-validation-for="Patent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="isNotWished" class="control-label"></label>

                @*Configuracion  Original*@
                @* @Html.CheckBoxFor(model => model.isNotWished)*@

                @*Configuracion para que inicie chequeado siempre*@
                @Html.CheckBox("isNotWished", true, new { @disabled = "disabled" })
                @*@Html.CheckBox("isNotWished", true, new { onclick = "return false" })*@

                @* Pruebas
        @Html.CheckBoxFor(model => model.isNotWished, new { onclick = "return false" })
        @Html.DisplayFor(model => model.isNotWished)
        @Html.HiddenFor(model => model.isNotWished, true)*@

                <span asp-validation-for="isNotWished" class="text-danger"></span>
            </div>

            @*CODIGO HTML CON TAG HELPERS PARA SUBIR ARCHIVO*@
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <div class="col-md-10">
                    <input type="file" name="file" />
                </div>
            </div>
            @*FIN CODIGO HTML CON TAG HELPERS PARA SUBIR ARCHIVO*@

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Volver</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/clients.js" asp-append-version="true"></script>

}
